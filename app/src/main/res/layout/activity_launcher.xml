<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202042">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Logo with glow -->
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="48dp">

            <View
                android:id="@+id/logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/logo_background"
                android:elevation="20dp" />


        </FrameLayout>

        <!-- App Name -->
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_repeatertxt"
            android:textSize="42sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.05" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/repeat_anything_perfectly"
            android:textSize="18sp"
            android:textColor="#a0a8cc" />

        <!-- Loading bar -->
        <View
            android:id="@+id/loader_bar"
            android:layout_width="80dp"
            android:layout_height="5dp"
            android:layout_marginTop="50dp"
            android:background="#8692f7"
            android:scaleX="0"
            android:pivotX="0"
            android:backgroundTint="#8692f7" />

    </LinearLayout>

</RelativeLayout>